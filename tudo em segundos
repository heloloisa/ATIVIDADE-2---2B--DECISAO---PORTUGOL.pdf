programa
{
	
	funcao inicio()
	{
		inteiro dias
		inteiro horas
		inteiro minutos
		inteiro segundos 

		escreva("Me informe a quantidade de dias \n")
		leia(dias)
		escreva("Me informe a quantidade de horas \n")
		leia(horas)
		escreva("Me informe a quantidade de minutos \n")
		leia(minutos)
		escreva("Me informe a quantidade de segundos \n")
		leia(segundos)

		dias = dias * 24 * 60 * 60 * 60
		horas = horas * 60 * 60
		minutos = minutos * 60

		segundos = segundos + dias + horas + minutos
		escreva(segundos)
	}
}
